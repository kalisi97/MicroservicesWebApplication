@model IdentityServerHost.Quickstart.UI.RegisterViewModel
@{
    ViewData["Title"] = "Register";
}

<div class="col-sm-6">
    <div class="card">
        <div class="card-header">
            <h2>Register</h2>
        </div>

        <div class="card-body">
            <form asp-controller="Account" asp-action="Register" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">

             

                <div class="form-group">
                    <label asp-for="User.Email">Email</label>
                    <input asp-for="User.Email" class="form-control" placeholder="email" />
                    <span asp-validation-for="User.Email" class="text-danger" />
                </div>

                <div class="form-group">
                    <label asp-for="User.UserName">Username</label>
                    <input asp-for="User.UserName" class="form-control" placeholder="username" />
                    <span asp-validation-for="User.UserName" class="text-danger" />
                </div>

                <div class="form-group">
                    <label asp-for="Password"></label>
                    <input type="password" class="form-control" placeholder="password" asp-for="Password" autocomplete="off">
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="ConfirmPassword"></label>
                    <input type="password" class="form-control" placeholder="confirm password" asp-for="ConfirmPassword" autocomplete="off">
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>


                <button class="btn btn-primary" type="submit" name="button" value="register">Register</button>
                <button class="btn btn-secondary" name="button" value="cancel">Cancel</button>

            </form>
        </div>
    </div>
</div>







